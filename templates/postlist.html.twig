{% extends 'layout.html.twig' %}
{% block title %}Xavier COUTANT - Blog{% endblock %}

{% block content %}

    <div class='row text-center'>
        <h2>Liste des billets<br/></h2>
        <h3>Pour lire un message au complet, cliquer sur son titre.</h3>
    </div>

    <!-- Récupération du contenu de la table 'post' -->
    {% for donnees in list_post %}     <!--while ($donnees = $liste_post->fetch()) -->
        <div class = 'row'>
            <div class = 'col-xs-12'>
                <div class='panel panel-default'>
                    <div class='panel-heading'>
                        <div class='row titrepannel'>
                            <div class='col-xs-8'>
                                <a href=" {{ path('Framework/Controller/ArticleListController', {'id': donnees.id}) }} "><h3 class='titrepost'> {{ donnees.titre }}</h3></a>
                            </div>
                            <div class='col-xs-4'>
                                <h4 class='titredate'>Créé le : {{ donnees.date_creation }} </h4>
                            </div>
                        </div>
                    </div>
                    <div class='panel-body chapo'> {{ donnees.chapo }} </div>
                </div>
            </div>
        </div>
    {% endfor %}

{% endblock %}